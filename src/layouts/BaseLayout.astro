---
const { title = "Kraken" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg: #0f0f0f;
      --text: #f0f0f0;
      --accent: #ff6b35;
      --secondary: #1a1a1a;
      --border: #2a2a2a;
    }
    
    [data-theme="light"] {
      --bg: #ffffff;
      --text: #1a1a1a;
      --accent: #e85d04;
      --secondary: #f5f5f5;
      --border: #e0e0e0;
    }
    
    /* ÊñáÁ´†Ê≠£Êñá - Ê∑±Ëâ≤ÊñáÂ≠óÁ°Æ‰øùÂèØËØªÊÄß */
    [data-theme="light"] .prose {
      color: #1a1a1a;
    }
    
    [data-theme="light"] .prose :global(h1),
    [data-theme="light"] .prose :global(h2),
    [data-theme="light"] .prose :global(h3),
    [data-theme="light"] .prose :global(h4) {
      color: #000000;
    }
    
    [data-theme="light"] .prose :global(p),
    [data-theme="light"] .prose :global(li),
    [data-theme="light"] .prose :global(ol) {
      color: #1a1a1a;
      line-height: 1.8;
    }
    
    /* ÂàóË°®Êï∞Â≠ó/Á¨¶Âè∑Âä†Ê∑± */
    [data-theme="light"] .prose :global(strong),
    [data-theme="light"] .prose :global(b) {
      color: #000000;
    }
    
    /* ‰ª£Á†ÅÂùó */
    [data-theme="light"] .prose :global(code) {
      background: #e8e8e8;
      color: #1a1a1a;
    }
    
    [data-theme="light"] .prose :global(pre) {
      background: #f5f5f5;
      border: 1px solid #e0e0e0;
    }
    
    /* ÂºïÁî® */
    [data-theme="light"] .prose :global(blockquote) {
      color: #444;
      border-left-color: var(--accent);
      background: #fafafa;
      padding: 0.5rem 1rem;
      border-radius: 0 4px 4px 0;
    }
    
    /* ÈìæÊé• */
    [data-theme="light"] .prose :global(a) {
      color: var(--accent);
      text-decoration: underline;
    }
    
    * { 
      margin: 0; 
      padding: 0; 
      box-sizing: border-box; 
    }
    
    html, body {
      height: 100%;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      display: flex;
      flex-direction: column;
      transition: background 0.3s, color 0.3s;
    }
    
    nav {
      padding: 1.5rem 2rem;
      border-bottom: 1px solid var(--border);
      display: flex;
      gap: 2.5rem;
      max-width: 1200px;
      margin: 0 auto;
      width: 100%;
      align-items: center;
    }
    
    .nav-links {
      display: flex;
      gap: 2.5rem;
      flex: 1;
    }
    
    nav a {
      color: #888;
      text-decoration: none;
      font-size: 0.95rem;
      font-weight: 500;
      transition: all 0.2s;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      padding-bottom: 0.25rem;
      border-bottom: 2px solid transparent;
    }
    
    nav a:hover { 
      color: var(--accent); 
    }
    
    nav a.active {
      color: var(--text);
      border-bottom-color: var(--accent);
    }
    
    .theme-toggle {
      background: var(--secondary);
      border: 1px solid var(--border);
      color: var(--text);
      padding: 0.5rem 1rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 0.875rem;
      transition: all 0.2s;
    }
    
    .theme-toggle:hover {
      border-color: var(--accent);
    }
    
    main { 
      flex: 1;
      max-width: 1200px; 
      margin: 0 auto; 
      padding: 0 2rem;
      width: 100%;
    }
    
    footer {
      text-align: center; 
      padding: 2rem; 
      color: #888; 
      font-size: 0.875rem; 
      border-top: 1px solid var(--border);
    }
  </style>
  
  <script>
    // ‰∏ªÈ¢òÂàáÊç¢ÈÄªËæë
    const theme = (() => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        return localStorage.getItem('theme');
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      return 'dark'; // ÈªòËÆ§Ê∑±Ëâ≤
    })();
    
    if (theme === 'light') {
      document.documentElement.setAttribute('data-theme', 'light');
    }
    
    window.toggleTheme = () => {
      const current = document.documentElement.getAttribute('data-theme');
      const next = current === 'light' ? 'dark' : 'light';
      document.documentElement.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
    };
  </script>
</head>

<body>
  <nav>
    <div class="nav-links">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>È¶ñÈ°µ</a>
      <a href="/posts" class={currentPath.startsWith('/posts') ? 'active' : ''}>ÊñáÁ´†</a>
      <a href="/projects" class={currentPath.startsWith('/projects') ? 'active' : ''}>È°πÁõÆ</a>
      <a href="/life" class={currentPath.startsWith('/life') ? 'active' : ''}>ÁîüÊ¥ª</a>
      <a href="/about" class={currentPath.startsWith('/about') ? 'active' : ''}>ÂÖ≥‰∫é</a>
    </div>
    <button class="theme-toggle" onclick="toggleTheme()">üåì ÂàáÊç¢‰∏ªÈ¢ò</button>
  </nav>

  <div id="progress-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 3px; background: var(--border); z-index: 1000;">
    <div id="progress-bar" style="height: 100%; background: var(--accent); width: 0%; transition: width 0.1s;"></div>
  </div>

  <script>
    window.addEventListener('scroll', () => {
      const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      document.getElementById('progress-bar').style.width = scrolled + "%";
    });
  </script>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <p>¬© 2025 Kraken. Built with Astro.</p>
    <p style="margin-top: 0.5rem;">
      <a href="/rss.xml" style="color: #666; text-decoration: none;">RSS ËÆ¢ÈòÖ</a>
    </p>
  </footer>
</body>
</html>