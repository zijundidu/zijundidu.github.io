      --border: #2a2a2a;
    }
    
    [data-theme="light"] {
      --bg: #ffffff;
      --text: #1a1a1a;
      --accent: #e85d04;
      --secondary: #f5f5f5;
      --border: #e0e0e0;
    }
    
    [data-theme="light"] .prose {
      color: #1a1a1a;
    }
    
    [data-theme="light"] .prose h1,
    [data-theme="light"] .prose h2,
    [data-theme="light"] .prose h3,
    [data-theme="light"] .prose h4,
    [data-theme="light"] .prose h5,
    [data-theme="light"] .prose h6 {
      color: #000000;
    }
    
    [data-theme="light"] .prose p,
    [data-theme="light"] .prose li,
    [data-theme="light"] .prose ol,
    [data-theme="light"] .prose ul {
      color: #1a1a1a;
    }
    
    [data-theme="light"] .prose strong,
    [data-theme="light"] .prose b {
      color: #000000;
    }
    
    [data-theme="light"] .prose code {
      background: #e8e8e8;
      color: #1a1a1a;
    }
    
    [data-theme="light"] .prose pre {
      background: #f5f5f5;
      border: 1px solid #e0e0e0;
    }
    
    [data-theme="light"] .prose pre code {
      background: none;
      color: #1a1a1a;
    }
    
    [data-theme="light"] .prose blockquote {
      color: #444;
      border-left-color: var(--accent);
      background: #fafafa;
      padding: 0.5rem 1rem;
      border-radius: 0 4px 4px 0;
    }
    
    [data-theme="light"] .prose a {
      color: var(--accent);
    }
    
    [data-theme="light"] .rss-link {
      color: #666;
    }
    
    [data-theme="light"] .rss-link:hover {
      color: var(--accent);
    }
  </style>
  
  <style>
    * { 
      margin: 0; 
      padding: 0; 
      box-sizing: border-box; 
    }
    
    html, body {
      height: 100%;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      display: flex;
      flex-direction: column;
      transition: background 0.3s, color 0.3s;
    }
    
    #progress-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: var(--border);
      z-index: 1000;
    }
    
    #progress-bar {
      height: 100%;
      background: var(--accent);
      width: 0%;
      transition: width 0.1s;
    }
    
    nav {
      padding: 1.5rem 2rem;
      border-bottom: 1px solid var(--border);
      display: flex;
      gap: 2.5rem;
      max-width: 1200px;
      margin: 0 auto;
      width: 100%;
      align-items: center;
    }
    
    .nav-links {
      display: flex;
      gap: 2.5rem;
      flex: 1;
    }
    
    nav a {
      color: #888;
      text-decoration: none;
      font-size: 0.95rem;
      font-weight: 500;
      transition: all 0.2s;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      padding-bottom: 0.25rem;
      border-bottom: 2px solid transparent;
    }
    
    nav a:hover { 
      color: var(--accent); 
    }
    
    nav a.active {
      color: var(--text);
      border-bottom-color: var(--accent);
    }
    
    .nav-right {
      display: flex;
      gap: 1rem;
      align-items: center;
    }
    
    .rss-link {
      color: #888;
      text-decoration: none;
      font-size: 0.875rem;
      transition: color 0.2s;
    }
    
    .rss-link:hover {
      color: var(--accent);
    }
    
    .theme-toggle {
      background: var(--secondary);
      border: 1px solid var(--border);
      color: var(--text);
      padding: 0.5rem 1rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 0.875rem;
      transition: all 0.2s;
    }
    
    .theme-toggle:hover {
      border-color: var(--accent);
    }
    
    main { 
      flex: 1;
      max-width: 1200px; 
      margin: 0 auto; 
      padding: 0 2rem;
      width: 100%;
    }
    
    footer {
      text-align: center; 
      padding: 2rem; 
      color: #888; 
      font-size: 0.875rem; 
      border-top: 1px solid var(--border);
    }
    
    footer a {
      color: #888;
      text-decoration: none;
    }
    
    footer a:hover {
      color: var(--accent);
    }
  </style>
  
  <script>
    window.toggleTheme = () => {
      const current = document.documentElement.getAttribute('data-theme');
      const next = current === 'light' ? 'dark' : 'light';
      document.documentElement.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
    };
    
    window.addEventListener('scroll', () => {
      const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      const progressBar = document.getElementById('progress-bar');
      if (progressBar) {
        progressBar.style.width = scrolled + "%";
      }
    });
  </script>
</head>
