---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import Giscus from '../../components/Giscus.astro';
import ImageLightbox from '../../components/ImageLightbox.astro';

export async function getStaticPaths() {
  const items = await getCollection('life');
  return items.map(item => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

const { item } = Astro.props;
const { Content } = await item.render();
---

<BaseLayout title={`${item.data.title} | Kraken`}>
  <article style="padding: 3rem 0; max-width: 900px;">
    <header style="margin-bottom: 2rem;">
      {item.data.cover && (
        <img 
          src={item.data.cover} 
          alt={item.data.title}
          style="width: 100%; max-height: 400px; object-fit: cover; border-radius: 12px; margin-bottom: 2rem;"
        />
      )}
      
      <h1 style="font-size: 2.5rem; font-weight: 800; margin-bottom: 1rem;">
        {item.data.title}
      </h1>
      
      <div style="color: #666; font-size: 0.9rem;">
        <time>{item.data.pubDate.toLocaleDateString('zh-CN')}</time>
        {item.data.location && <span> ¬∑ üìç {item.data.location}</span>}
      </div>
    </header>
    
    <div class="prose">
      <Content />
    </div>
    
    <footer style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid var(--border);">
      <a href="/life" style="color: var(--accent); text-decoration: none;">‚Üê ËøîÂõûÁîüÊ¥ªËÆ∞ÂΩï</a>
    </footer>
    
    <Giscus />
  </article>
  
  <ImageLightbox />
</BaseLayout>

<style>
  .prose {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #ccc;
  }
  
  .prose :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 2.5rem 0 1rem;
    color: var(--text);
  }
  
  .prose :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem;
    color: var(--text);
  }
  
  .prose :global(p) {
    margin: 1.25rem 0;
  }
  
  .prose :global(ul), .prose :global(ol) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
  }
  
  .prose :global(li) {
    margin: 0.5rem 0;
  }
  
  .prose :global(code) {
    padding: 0.2rem 0.4rem;
    background: var(--secondary);
    border-radius: 4px;
    font-family: 'Fira Code', monospace;
    font-size: 0.875em;
  }
  
  .prose :global(pre) {
    padding: 1rem;
    background: #161616;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose :global(pre code) {
    padding: 0;
    background: none;
  }
  
  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #888;
    font-style: italic;
  }
  
  .prose :global(a) {
    color: var(--accent);
    text-decoration: none;
  }
  
  .prose :global(a:hover) {
    text-decoration: underline;
  }
  
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }
  
  .prose :global(img) {
    max-width: 100%;
    border-radius: 8px;
    margin: 1rem 0;
  }
</style>