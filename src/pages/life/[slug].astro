  <article style="padding: 3rem 0; max-width: 900px;">
    <header style="margin-bottom: 2rem;">
      {item.data.cover && (
        <img 
          src={item.data.cover} 
          alt={item.data.title}
          style="width: 100%; max-height: 400px; object-fit: cover; border-radius: 12px; margin-bottom: 2rem;"
        />
      )}
      
      <h1 style="font-size: 2.5rem; font-weight: 800; margin-bottom: 1rem;">
        {item.data.title}
      </h1>
      
