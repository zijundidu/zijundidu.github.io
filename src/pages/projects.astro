---
import BaseLayout from '../layouts/BaseLayout.astro';

// 替换为你的 GitHub 用户名
const GITHUB_USERNAME = 'zijundidu';

const response = await fetch(`https://api.github.com/users/${GITHUB_USERNAME}/repos?sort=updated&per_page=10`);
const repos = await response.json();

// 过滤掉 fork 的仓库，只展示原创项目
const myRepos = repos.filter(repo => !repo.fork);
---

<BaseLayout title="项目 | Kraken">
  <div style="padding: 3rem 0;">
    <h1 style="font-size: 3rem; font-weight: 800; margin-bottom: 1rem;">项目</h1>
    <p style="color: #666; margin-bottom: 3rem;">GitHub 开源作品展示</p>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 1.5rem;">
      {myRepos.map(repo => (
        <div class="repo-card">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 0.75rem;">
            <a 
              href={repo.html_url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="repo-name"
            >
              {repo.name}
            </a>
            <span style="color: #666; font-size: 0.75rem;">
              ⭐ {repo.stargazers_count}
            </span>
          </div>
          
          <p style="color: #888; font-size: 0.9rem; line-height: 1.5; margin-bottom: 1rem; min-height: 2.7em;">
            {repo.description || '暂无描述'}
          </p>
          
          <div style="display: flex; gap: 1rem; font-size: 0.75rem; color: #666;">
            {repo.language && (
              <span style="display: flex; align-items: center; gap: 0.25rem;">
                <span class="lang-dot" style={`background: ${getLangColor(repo.language)}`}></span>
                {repo.language}
              </span>
            )}
            <span>更新于 {formatDate(repo.updated_at)}</span>
          </div>
        </div>
      ))}
    </div>
    
    {myRepos.length === 0 && (
      <p style="color: #666; text-align: center; padding: 4rem 0;">暂无公开仓库</p>
    )}
  </div>
</BaseLayout>

<style>
  .repo-card {
    padding: 1.5rem;
    background: var(--secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .repo-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(255, 107, 53, 0.1);
  }
  
  .repo-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
  }
  
  .repo-name:hover {
    text-decoration: underline;
  }
  
  .lang-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    display: inline-block;
  }

  function getLangColor(lang: string): string {
    const colors: Record<string, string> = {
      'JavaScript': '#f1e05a',
      'TypeScript': '#3178c6',
      'Python': '#3572A5',
      'Java': '#b07219',
      'Go': '#00ADD8',
      'Rust': '#dea584',
      'HTML': '#e34c26',
      'CSS': '#563d7c',
      'Vue': '#41b883',
      'React': '#61dafb',
      'Astro': '#ff5d01',
      'Shell': '#89e051',
      'C++': '#f34b7d',
      'C': '#555555',
    };
    return colors[lang] || '#8b949e';
  }

  function formatDate(dateStr: string): string {
    const date = new Date(dateStr);
    const now = new Date();
    const diff = now.getTime() - date.getTime();
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    
    if (days === 0) return '今天';
    if (days === 1) return '昨天';
    if (days < 7) return `${days} 天前`;
    if (days < 30) return `${Math.floor(days / 7)} 周前`;
    return date.toLocaleDateString('zh-CN');
  }
</style>