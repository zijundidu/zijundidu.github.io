---
import BaseLayout from '../layouts/BaseLayout.astro';

const GITHUB_USERNAME = 'zijundidu';
const response = await fetch(`https://api.github.com/users/${GITHUB_USERNAME}/repos?sort=updated&per_page=10`);
const repos = await response.json();
const myRepos = repos.filter(repo => !repo.fork);

const langColors: Record<string, string> = {
  'JavaScript': '#f1e05a',
  'TypeScript': '#3178c6',
  'Python': '#3572A5',
  'Java': '#b07219',
  'Go': '#00ADD8',
  'Rust': '#dea584',
  'HTML': '#e34c26',
  'CSS': '#563d7c',
  'Vue': '#41b883',
  'React': '#61dafb',
  'Astro': '#ff5d01',
  'Shell': '#89e051',
  'C++': '#f34b7d',
  'C': '#555555',
};
---

<BaseLayout title="项目 | Kraken">
  <div style="padding: 3rem 0;">
    <h1 style="font-size: 3rem; font-weight: 800; margin-bottom: 1rem;">项目</h1>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 1.5rem;">
      {myRepos.map(repo => (
        <div style="padding: 1.5rem; background: var(--secondary); border: 1px solid var(--border); border-radius: 12px;">
          <a href={repo.html_url} target="_blank" rel="noopener noreferrer" style="font-size: 1.125rem; font-weight: 600; color: var(--accent); text-decoration: none;">
            {repo.name}
          </a>
          <p style="color: #888; font-size: 0.9rem; margin: 0.5rem 0;">{repo.description || '暂无描述'}</p>
          <div style="font-size: 0.75rem; color: #666;">
            ⭐ {repo.stargazers_count} · 
            {repo.language && (
              <span style="display: inline-flex; align-items: center; gap: 0.25rem;">
                <span style="width: 8px; height: 8px; border-radius: 50%; background: {langColors[repo.language] || '#8b949e'}; display: inline-block;"></span>
                {repo.language}
              </span>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>